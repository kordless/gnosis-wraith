{
  "name": "gnosis-wraith-extension",
  "displayName": "Gnosis Wraith Extension",
  "description": "VSCode extension for Gnosis Wraith project",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gnosis-wraith.enableTracking",
        "title": "Enable Gnosis Wraith Line Tracking"
      },
      {
        "command": "gnosis-wraith.disableTracking",
        "title": "Disable Gnosis Wraith Line Tracking"
      }
    ],
    "configuration": {
      "title": "Gnosis Wraith",
      "properties": {
        "gnosisWraith.serverUrl": {
          "type": "string",
          "default": "http://localhost:5679",
          "description": "URL of the Gnosis Wraith rebuild server"
        },
        "gnosisWraith.pollInterval": {
          "type": "number",
          "default": 1000,
          "description": "Polling interval in milliseconds"
        },
        "gnosisWraith.autoEnable": {
          "type": "boolean",
          "default": true,
          "description": "Automatically enable line tracking on startup"
        }
      }
    }
  }
}